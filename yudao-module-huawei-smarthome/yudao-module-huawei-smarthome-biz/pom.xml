        <!-- 如果使用 Feign 调用华为 API -->
        <!--
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-openfeign</artifactId>
        </dependency>
        -->

        <!-- Http Client, e.g. OkHttp or Apache HttpClient for RestTemplate/WebClient or direct use -->
        <dependency>
            <groupId>com.squareup.okhttp3</groupId>
            <artifactId>okhttp</artifactId>
        </dependency>

    </dependencies>
</project>
