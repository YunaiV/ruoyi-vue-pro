FROM node:22-slim AS builder

ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
ENV NODE_OPTIONS=--max-old-space-size=8192
ENV TZ=Asia/Shanghai

RUN npm i -g corepack && corepack enable

WORKDIR /app

# å¤åˆ¶æ‰€æœ‰æ–‡ä»¶
COPY . /app

# å®‰è£…ä¾èµ–å¹¶æ„å»º
RUN --mount=type=cache,id=pnpm,target=/pnpm/store pnpm install --frozen-lockfile
RUN pnpm run build --filter=\!./docs

RUN echo "Builder Success ğŸ‰"

# ======================== ç¬¬äºŒé˜¶æ®µï¼šè¿è¡Œ ========================
FROM nginx:stable-alpine AS production

LABEL maintainer="yudao" \
      description="Yudao Admin Vben Production Environment" \
      version="1.0.0"

# è®¾ç½®æ—¶åŒº
ENV TZ=Asia/Shanghai
RUN apk add --no-cache tzdata curl && \
    ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && \
    echo $TZ > /etc/timezone

# åˆ›å»ºé root ç”¨æˆ·
RUN addgroup -g 1001 -S nginx-user && \
    adduser -u 1001 -S nginx-user -G nginx-user

# é…ç½® nginx - æ·»åŠ  mjs æ”¯æŒ
RUN echo "types { application/javascript js mjs; }" > /etc/nginx/conf.d/mjs.conf && \
    rm -rf /etc/nginx/conf.d/default.conf

# å¤åˆ¶æ„å»ºäº§ç‰©
COPY --from=builder /app/apps/web-antd/dist /usr/share/nginx/html

# å¤åˆ¶ nginx é…ç½®
COPY docker/admin-vben/nginx.prod.conf /etc/nginx/nginx.conf

# è®¾ç½®æƒé™
RUN chown -R nginx-user:nginx-user /usr/share/nginx/html && \
    chown -R nginx-user:nginx-user /var/cache/nginx && \
    chown -R nginx-user:nginx-user /var/log/nginx && \
    touch /var/run/nginx.pid && \
    chown nginx-user:nginx-user /var/run/nginx.pid

# æš´éœ²ç«¯å£
EXPOSE 8080

# å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8080 || exit 1

# å¯åŠ¨ nginx
CMD ["nginx", "-g", "daemon off;"]
